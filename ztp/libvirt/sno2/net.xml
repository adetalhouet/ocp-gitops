  </forward>
  <bridge name='virbr2' stp='on' delay='0'/>
  <ip address='192.168.124.1' netmask='255.255.255.0'>
    <dhcp>
      <range start='192.168.124.2' end='192.168.124.254'/>
      <host mac="02:01:00:00:00:66" name="sno2.lab.adetalhouet" ip="192.168.124.5"/>
